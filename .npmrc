# Security settings
# Require 2FA for publishing (when supported by registry)
# Note: This is enforced on npmjs.com when you enable 2FA on your account

# Prevent accidental publish to wrong registry
registry=https://registry.npmjs.org/

# Ignore scripts from dependencies during install (security measure)
ignore-scripts=false

# Audit level - fail install if high/critical vulnerabilities found
audit-level=high

# Always run npm audit on install
audit=true

# Strict SSL (never disable this!)
strict-ssl=true

