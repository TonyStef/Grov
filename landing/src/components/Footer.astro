        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="pt-8 border-t border-grov-border flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-grov-text-muted">
        &copy; {new Date().getFullYear()} Grov. All rights reserved.
      </p>
      <div class="flex items-center gap-6 text-sm text-grov-text-muted">
        <a
          href="https://github.com/TonyStef/Grov/blob/main/LICENSE"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-grov-text transition-colors"
        >
          Apache 2.0
        </a>
        <a href="/privacy" class="hover:text-grov-text transition-colors">
          Privacy
        </a>
        <a href="/terms" class="hover:text-grov-text transition-colors">
          Terms
        </a>
      </div>
    </div>
  </div>
</footer>
