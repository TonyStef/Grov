---
// Header with navigation and prominent CTAs
// Version injected at build time from npm registry
declare const __APP_VERSION__: string;
const version = `v${__APP_VERSION__}`;
---

<header id="site-header" class="fixed top-0 left-0 right-0 z-50 border-b border-transparent transition-[background-color,border-color,backdrop-filter] duration-300">
  <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo with version -->
    <a
      href="/"
      class="flex items-center gap-3 opacity-90 hover:opacity-100 transition-opacity focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-grov-accent focus-visible:ring-offset-2 focus-visible:ring-offset-grov-black rounded-lg"
      style="touch-action: manipulation;"
    >
      <img src="/owl-logo.png" alt="Grov" class="h-12 w-auto" width="48" height="48" />
      <span class="hidden sm:inline font-mono text-xs text-grov-accent px-2.5 py-1 rounded-full badge">
        {version}
      </span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-8">
      <a
        href="/docs"
        class="text-sm text-grov-text-secondary hover:text-grov-text transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-grov-accent focus-visible:ring-offset-2 focus-visible:ring-offset-grov-black rounded-md px-2 py-1"
        style="touch-action: manipulation;"
      >
        Docs
      </a>
      <a
        href="/integrations"
        class="text-sm text-grov-text-secondary hover:text-grov-text transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-grov-accent focus-visible:ring-offset-2 focus-visible:ring-offset-grov-black rounded-md px-2 py-1"
        style="touch-action: manipulation;"
      >
        Integrations
      </a>
      <a
        href="/pricing"
        class="text-sm text-grov-text-secondary hover:text-grov-text transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-grov-accent focus-visible:ring-offset-2 focus-visible:ring-offset-grov-black rounded-md px-2 py-1"
        style="touch-action: manipulation;"
      >
        Pricing
      </a>
    </nav>

    <!-- CTAs -->
    <div class="flex items-center gap-4">
      <a
        href="https://app.grov.dev"
        class="hidden sm:inline text-sm text-grov-text-secondary hover:text-grov-text transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-grov-accent focus-visible:ring-offset-2 focus-visible:ring-offset-grov-black rounded-md px-2 py-1"
        style="touch-action: manipulation;"
      >
        Login
      </a>
      <a
        href="https://app.grov.dev/login"
        class="btn-primary text-sm py-2.5 px-5"
        style="touch-action: manipulation;"
      >
        Get Started
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2.5 text-grov-text-secondary hover:text-grov-text transition-colors rounded-xl glass focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-grov-accent"
        aria-label="Toggle menu"
        aria-expanded="false"
        style="touch-action: manipulation;"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t glass">
    <nav class="max-w-6xl mx-auto px-6 py-6 flex flex-col gap-2">
      <a
        href="/docs"
        class="text-sm text-grov-text-secondary hover:text-grov-text hover:bg-grov-surface-elevated transition-colors py-3 px-4 rounded-xl"
        style="touch-action: manipulation;"
      >
        Docs
      </a>
      <a
        href="/integrations"
        class="text-sm text-grov-text-secondary hover:text-grov-text hover:bg-grov-surface-elevated transition-colors py-3 px-4 rounded-xl"
        style="touch-action: manipulation;"
      >
        Integrations
      </a>
      <a
        href="/pricing"
        class="text-sm text-grov-text-secondary hover:text-grov-text hover:bg-grov-surface-elevated transition-colors py-3 px-4 rounded-xl"
        style="touch-action: manipulation;"
      >
        Pricing
      </a>
      <div class="pt-4 mt-2 border-t border-grov-border">
        <a
          href="https://app.grov.dev"
          class="text-sm text-grov-text-secondary hover:text-grov-text hover:bg-grov-surface-elevated transition-colors py-3 px-4 rounded-xl block"
          style="touch-action: manipulation;"
        >
          Login
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  // Header scroll behavior
  const header = document.getElementById('site-header');
  let lastScroll = 0;

  function updateHeader() {
    const currentScroll = window.scrollY;

    if (currentScroll > 50) {
      header?.classList.add('glass');
      header?.classList.remove('border-transparent');
      header?.classList.add('border-grov-border');
    } else {
      header?.classList.remove('glass');
      header?.classList.add('border-transparent');
      header?.classList.remove('border-grov-border');
    }

    lastScroll = currentScroll;
  }

  window.addEventListener('scroll', updateHeader, { passive: true });
  updateHeader();

  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuBtn?.addEventListener('click', () => {
    const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';

    menuBtn.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Close mobile menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuBtn?.setAttribute('aria-expanded', 'false');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });
</script>
