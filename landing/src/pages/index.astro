---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import BeforeAfterDemo from '../components/BeforeAfterDemo';
import UseCases from '../components/UseCases';
import CaptureExample from '../components/CaptureExample.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <main>
    <Hero client:load />

    <!-- Side-by-side Before/After Demo -->
    <BeforeAfterDemo client:visible />

    <!-- Use Cases -->
    <UseCases client:visible />

    <!-- Token Savings -->
    <section class="py-20 px-6 reveal-section">
      <div class="max-w-3xl mx-auto">
        <div class="card">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8">
            <div>
              <h3 class="text-lg font-semibold text-grov-text mb-4" style="font-family: var(--font-display);">
                How it works
              </h3>
              <p class="text-grov-text-secondary text-sm mb-6">
                Grov captures reasoning from every AI session. When the next session starts, it injects only what's relevant.
              </p>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
                <div class="flex items-start gap-3">
                  <span class="text-grov-accent font-mono shrink-0 font-semibold">1.</span>
                  <div>
                    <span class="text-grov-text font-medium">Capture</span>
                    <div class="text-grov-text-muted text-xs mt-0.5">Decisions, reasoning, and file context â€” automatically</div>
                  </div>
                </div>
                <div class="flex items-start gap-3">
                  <span class="text-grov-accent font-mono shrink-0 font-semibold">2.</span>
                  <div>
                    <span class="text-grov-text font-medium">Search</span>
                    <div class="text-grov-text-muted text-xs mt-0.5">Hybrid semantic + keyword search across all team memories</div>
                  </div>
                </div>
                <div class="flex items-start gap-3">
                  <span class="text-grov-accent font-mono shrink-0 font-semibold">3.</span>
                  <div>
                    <span class="text-grov-text font-medium">Inject</span>
                    <div class="text-grov-text-muted text-xs mt-0.5">~500 tokens of verified context vs 50K+ from file exploration</div>
                  </div>
                </div>
              </div>
            </div>
            <div class="shrink-0">
              <a
                href="/docs/how-memory-works"
                class="btn-secondary text-sm"
                style="touch-action: manipulation;"
              >
                Learn more
                <svg class="w-4 h-4 ml-1 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <CaptureExample />
  </main>
  <Footer />
</Layout>
