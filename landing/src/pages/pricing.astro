---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Pricing | Grov"
  description="Simple, transparent pricing for AI memory. Start free, scale when you need to."
>
  <main class="pt-24 pb-16 px-6">
    <div class="max-w-6xl mx-auto">

      <!-- Header -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-grov-accent-bg border border-grov-accent/20 rounded-full mb-6">
          <span class="font-mono text-xs text-grov-accent">Simple Pricing</span>
        </div>
        <h1 class="text-section text-grov-text mb-4" style="font-family: var(--font-display);">
          Start free. Scale when ready.
        </h1>
        <p class="text-body-lg text-grov-text-secondary max-w-xl mx-auto">
          No credit card required. No hidden fees. Just AI memory that works.
        </p>
      </div>

      <!-- Billing Toggle -->
      <div class="flex justify-center items-center gap-4 mb-12">
        <span class="text-sm text-grov-text-secondary" id="monthly-label">Monthly</span>
        <button 
          id="billing-toggle" 
          class="relative w-14 h-7 bg-grov-surface border border-grov-border rounded-full transition-colors"
          aria-label="Toggle annual billing"
        >
          <span id="toggle-dot" class="absolute top-1 left-1 w-5 h-5 bg-grov-text-muted rounded-full transition-all"></span>
        </button>
        <span class="text-sm text-grov-text-secondary" id="annual-label">Annual</span>
      </div>

      <!-- Pricing Cards Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-5 mb-16">

        <!-- Free Tier -->
        <div class="card p-6 flex flex-col">
          <div class="font-mono text-xs text-grov-text-muted uppercase tracking-wide mb-3">
            Free
          </div>
          <div class="flex items-baseline gap-2 mb-1">
            <span class="text-3xl font-bold text-grov-text">$0</span>
            <span class="text-grov-text-muted text-sm">/month</span>
          </div>
          <p class="text-xs text-grov-text-secondary mb-6">
            Up to 2 users
          </p>

          <!-- Features -->
          <ul class="space-y-3 mb-6 flex-1 text-sm">
            <li class="flex items-start gap-2 text-grov-text-secondary">
              <svg class="w-4 h-4 text-grov-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              150 injections/month
            </li>
            <li class="flex items-start gap-2 text-grov-text-secondary">
              <svg class="w-4 h-4 text-grov-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Shared team context
            </li>
            <li class="flex items-start gap-2 text-grov-text-secondary">
              <svg class="w-4 h-4 text-grov-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Community support
            </li>
            <li class="flex items-start gap-2 text-grov-text-muted">
              <svg class="w-4 h-4 text-grov-text-muted flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
              Requires own API key
            </li>
          </ul>

          <a href="https://app.grov.dev/login" class="btn-secondary w-full text-center text-sm py-2">
            Get Started Free
          </a>
        </div>

        <!-- Pro Tier -->
        <div class="card p-6 flex flex-col">
          <div class="font-mono text-xs text-grov-text-muted uppercase tracking-wide mb-3">
            Pro
          </div>
          <div class="flex items-baseline gap-2 mb-1">
            <span class="text-3xl font-bold text-grov-text price-monthly">$5</span>
            <span class="text-3xl font-bold text-grov-text price-annual hidden">$4</span>
            <span class="text-grov-text-muted text-sm">/seat/month</span>
          </div>
          <p class="text-xs text-grov-text-secondary mb-6">
            500 injections/seat/month
          </p>

          <!-- Features -->
          <ul class="space-y-3 mb-6 flex-1 text-sm">
            <li class="flex items-start gap-2 text-grov-text-secondary">
