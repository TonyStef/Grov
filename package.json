{
  "name": "grov",
  "version": "0.1.2",
  "description": "Collective AI memory for Claude Code - captures reasoning from sessions and injects context into future sessions",
  "type": "module",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "grov": "dist/cli.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.js",
    "!dist/**/*.test.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "memory",
    "reasoning",
    "context",
    "llm",
    "developer-tools",
    "cli"
  ],
  "author": "Tony <github.com/TonyStef>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TonyStef/Grov.git"
  },
  "bugs": {
    "url": "https://github.com/TonyStef/Grov/issues",
    "email": "stefvirgil2006@gmail.com"
  },
  "homepage": "https://grov.dev",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "better-sqlite3": "^11.6.0",
    "commander": "^12.1.0",
    "debug": "^4.4.3",
    "dotenv": "^16.4.5",
    "openai": "^4.70.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.10.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
